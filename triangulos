r1 = float(input('Digite o primeiro seguimento: '))
r2 = float(input('Digite o segundo seguimento: '))
r3 = float(input('Digite o terceiro seguimento: '))
if r1 < r2 + r3 and r2 < r1 + r3 and r3 < r1 + r2:
  print('Os seguimentos acima PODEM formar um triângulo ', end='')
  if r1 == r2 == r3:
    print('Equilátero!')
  elif r1 != r2 != r3 != r1:
    print('Escaleno!')
  else:
    print('Isósceles!')
else:
  print('Os seguimentos acima NÂO PODEM formar um triângulo!')
